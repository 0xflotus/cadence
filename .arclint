      "type": "golint",
      "include": "(\\.go$)",
      "exclude": [
        "(^Godeps/)",
        "(^client/)",
        "(^common/mocks)",
        "(/thrift/)",
        "(\\.gen/)"
      ]
    },
    "gofmt": {
      "type": "gofmt",
      "include": "(\\.go$)",
      "exclude": [
        "(^Godeps/)",
        "(^client/)",
        "(/thrift/)",
        "(\\.gen/)"
       ]
    },
    "govet": {
      "type": "govet",
      "include": "(\\.go$)",
      "exclude": [
        "(^Godeps/)",
        "(^client/)",
        "(/thrift/)"
      ]
    }
  }
}
